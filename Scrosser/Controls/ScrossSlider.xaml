<UserControl x:Class="Scrosser.Controls.ScrossSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Scrosser.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Slider Width="Auto" Height="Auto" Orientation="{Binding Orientation}"
                   LargeChange="{Binding Scross.ZoomLargeChange}" SmallChange="{Binding Scross.ZoomSmallChange}"
                   Maximum="{Binding Scross.ZoomMaximum}" Minimum="{Binding Scross.ZoomMinimum}"
                   Value="{Binding Scross.Zoom}" IsEnabled="{Binding Scross.IsEnabled, Mode=OneWay}" AutoToolTipPlacement="TopLeft"/>
    </Grid>
</UserControl>
